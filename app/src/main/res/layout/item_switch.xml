<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="20dp"
        android:background="@drawable/pipe_name"
        android:text="관수 제어"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat1"
        android:layout_width="370dp"
        android:layout_height="140dp"
        android:background="@drawable/control_cell"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/umachineStatus"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/switch_off" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/umachineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/pipe_line"
            android:layout_marginLeft="80dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="관수 라인 1"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/umachineName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/pipe_line"
            android:layout_marginLeft="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="관수 라인 2"
            android:textColor="@color/white" />
    </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp">

            <EditText
                android:id="@+id/act_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:ems="10"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="분" />
            <EditText
                android:id="@+id/act_time2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:ems="10"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="분" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <android.widget.Button
            android:id="@+id/umachine_start"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/start_button"
            android:text="가동"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck" />
        <!--        <android.widget.Button-->
        <!--            android:id="@+id/umachine_stop"-->
        <!--            android:layout_width="40dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginLeft="25dp"-->
        <!--            android:background="@drawable/stop_button"-->
        <!--            android:text="정지"-->
        <!--            tools:ignore="TouchTargetSizeCheck" />-->
    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.constraintlayout.widget.ConstraintLayout>